<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Shrikhand" rel="stylesheet/marketplace.css">
  <title>Vinylovers</title>
</head>
<body>
  <div class="marketplace-container">
    <div class="top-row">
      <h1 class="title-market-place"> Marketplace</h1>
      <div class="range-form-container">
        <form action="/marketplace" method="POST" id="form-container">
          <span>Filter by distance in Km</span><input id="distanceSlider" type="range" min="0" max="600" value="<%= maxDistance %>" step="10" />
          <input id="rangevalue" type="number" name="rangevalue" min="0" max="600" value="<%= maxDistance %>"/>
          <button name="button">Search</button>
        </form>
      </div>
      <div class="user-panel user">
        <img class="avatar" src="<%= currentuser.imgUrl %>" alt="">
        <a href="user/edit"><span><%= currentuser.username %></span></a>
        <span>Money: <%= currentuser.money %>€</span>
        <span><a href="vinyl/add">Add vinyl</a></span>
        <span><a href="/auth/logout">Logout</a></span>
      </div>
    </div>
  <ul>
    <% vinyls.forEach((vinyl) => { %>

        <li>
          <div class="album-container">
          <img class="cover" src="<%= vinyl.imgUrl %>" alt="Imagen del album">
          <div class="owner-data">
            <div class="user">
              <img class="avatar" src="<%= vinyl.owner.imgUrl %>" alt="">
              <p class="username">Owner username: <%= vinyl.owner.username %></p>
            </div>
            <p>Album: <%= vinyl.albumName %> by <%= vinyl.artistName %></p>
            <p>Genres: <%= vinyl.genre %></p>
            <p>Price: <%= vinyl.price %>€</p>
            <p>Description: <%= vinyl.description %></p>
            <% if(user.money < vinyl.price){ %>
              <span> You do not have enough money</span>
            <% } else {%>
              <a class="btn buy-btn" type="button" href="vinyl/buy/<%= vinyl._id %>" name="button">Buy Vinyl</a>
              <%}%>
              </div>
            </div>
        </li>
    <% }) %>
    </ul>
  </div>

<script type="text/javascript" src="/javascripts/range.js"></script>
</body>
</html>
